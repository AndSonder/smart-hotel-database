<scroll-view scroll-y class="DrawerPage {{modalName=='viewModal'?'show':''}}">
  <cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">全屏抽屉</view>
  </cu-custom>
  <view class="total_box">
    <view class='first_box'>
      <view class="filter-search_module">
        <view class="filter_module">
          <view class="rtype_module" catchtap="choose_rtype"><text>{{rtypeContent}}</text>
          </view>
          <van-action-sheet show="{{ rtypeShow }}" actions="{{ rtypeList }}" cancel-text="取消" bind:close="onClose"
            bind:select="onSelect" bind:cancel="onCancel" />
          <view class="startTime_module" catchtap="choose_startTime"><text>{{startTimeContent}}</text>
          </view>
          <van-action-sheet show="{{ startTimeShow }}" bind:close="onClose">
          <view>内容</view>
        </van-action-sheet>
        </view>
      </view>
    </view>
    <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
      <view class="cu-item arrow" wx:for="{{20}}" wx:key="index">
        <view class="content">
          <text class="cuIcon-github text-grey"></text>
          <text class="text-grey">{{index +1}}</text>
        </view>
      </view>
    </view>
    <view class='padding margin text-center'>
      <view class='cu-btn bg-green lg block shadow radius margin-xl' bindtap="showModal" data-target="viewModal">
        打开抽屉
      </view>
    </view>
  </view>
</scroll-view>
<view class="DrawerClose {{modalName=='viewModal'?'show':''}}" bindtap="hideModal">
  <text class="cuIcon-pullright"></text>
</view>
<scroll-view scroll-y class="DrawerWindow {{modalName=='viewModal'?'show':''}}">
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
    <view class="cu-item arrow" wx:for="{{20}}" wx:key="index">
      <view class="content">
        <text class="cuIcon-github text-grey"></text>
        <text class="text-grey">{{index +1}}</text>
      </view>
    </view>
  </view>
</scroll-view>