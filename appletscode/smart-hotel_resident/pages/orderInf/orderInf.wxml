<cu-custom bgColor="bg-white" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">订单详情</view>
</cu-custom>
<view class="total_box">
  <view class="first_box">
    <view class="roomImg_module">
      <image class="roomImg" src="/images/Double.png"></image>
    </view>
  </view>
  <view class="second_box">
    <view class="roomInf_module">
      <view class="roomRtype_module">
        <view class="roomRtypeContentShow_module">
          <view class="roomRtypeContent_module"><text class="roomRtypeContent">主题特色大床房</text></view>
        </view>
      </view>
      <view class="roomInfContent_module">
        <view class="roomInfContentShow_module">
          <view class="roomInfShow_module"><text class="roomInfShow">房间床型：特大床</text></view>
        </view>
      </view>
      <view class="roomInfContent_module">
        <view class="roomInfContentShow_module">
          <view class="roomInfShow_module"><text class="roomInfShow">硬件种类：空调、灯</text></view>
          <view class="roomInfShow_module"><text class="roomInfShow">限住人数：3人</text></view>
        </view>
      </view>
      <view class="roomInfContent_module">
        <view class="roomInfContentShow_module">
          <view class="roomInfShow_module"><text class="roomInfShow">房间面积：20-25m²</text></view>
          <view class="roomInfShow_module"><text class="roomInfShow">窗户有无：有</text></view>
        </view>
      </view>
    </view>
  </view>
  <view class="third_box">
    <form>
      <view class="cu-form-group margin-top">
        <view class="title">姓名</view>
        <view class="title titleContent">穆刘杨</view>
      </view>
      <view class="cu-form-group">
        <view class="title">性别</view>
        <view class="title titleContent">女</view>
      </view>
      <view class="cu-form-group">
        <view class="title">手机号码</view>
        <view class="title titleContent">18178346924</view>
      </view>
      <view class="cu-form-group">
        <view class="title">预计入住时间</view>
        <view class="title">{{time}}</view>
      </view>
      <view class="cu-form-group">
        <view class="title">预计离开时间</view>
        <view class="title">{{time}}</view>
      </view>
      <view class="cu-form-group">
        <view class="title">实际入住时间</view>
        <view class="title titleContent">{{time}}</view>
      </view>
      <view class="cu-form-group">
        <view class="title">实际离开时间</view>
        <view class="title titleContent">{{time}}</view>
      </view>
    </form>
  </view>
  <view class="fourth_box">
    <view class="button_module">
      <view class="change_button">
        <button class="cu-btn lg round bg-green" style="width:250rpx">提交修改</button>
      </view>
      <view class="change_button">
        <button class="cu-btn lg round bg-red" style="width:250rpx">放弃订单</button>
      </view>
    </view>
  </view>
</view>