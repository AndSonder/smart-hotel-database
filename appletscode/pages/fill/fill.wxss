/* pages/fill/fill.wxss */
page {
    height: 100%;
}

.total_framework {
    width: 100%;
    height: 100%;
    flex-direction: column;
    font-family: "KaiTi";
    z-index:10;
    position: fixed;
}

.total_framework .total_img {
    width: 100%;
    height: 100%;
    filter: blur(200rpx);
    -webkit-filter: blur(20rpx);
}

.total_framework .btn_img{
    position: absolute;
    width: 1.3rem;
    height: 1.3rem;
    left: 17vw;
    top: 4.5vh;
}
.current-date .current-image {
    width: 50rpx;
    height: 50rpx;
    top: 4vh;
    left: 7vw;
    position: absolute;
}

.total {
    display: flex;
    position: absolute;
    width: 620rpx;
    height: 760rpx;
    top: 25%;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 75rpx;
    background-color: #eeeeee;
    border-radius: 30rpx;
    font-family: "KaiTi";
}
.total .picker_total{
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: white;
}
.picker_time {
    width: 330rpx;
    height: 100rpx;
    margin-top: 26rpx;
    margin-right: 20rpx;
    text-align: center;
}

.picker_total .picker_time_title{
    height: 100%;
    margin-top: 9%;
    margin-left: 5%;
    flex-grow: 1;
}
.picker-detail {
    width: 100%;
    height: 100%;
    padding-top: 30rpx;
    padding-left: 0.5%;
}

.total .btn_total_1 {
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: white;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
}

.total .btn_total_2{
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: white;
}
.btn_total_1 .btn_title {
    margin-top: 10%;
    margin-left: 5%;
    height: 100%;
    flex-grow: 1;
}

.btn_total_2 .btn_title {
    margin-top: 10%;
    margin-left: 5%;
    height: 100%;
    flex-grow: 1;
}
.btn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 200rpx;
    height: 45%;
    text-align: center;
    border-radius: 30rpx;
    margin-top: 7%;
    margin-right: 5%;
    background-color: #13c2c2;
    line-height: 70rpx;
    color: white;
}
.btn_total{
    width: 100%;
    height: 150rpx;
    text-align: center;
    border-bottom: 1rpx solid #eeeeee;
    background-color: white;
    border-radius: 0rpx 0rpx 20rpx 20rpx;
}
.btn_ {
    width: 90%;
    height: 50%;
    line-height: 70rpx;
    border-radius: 30rpx;
    margin-top: 5%;
    color: white;
    background-color: #13c2c2;
}

.btn-hover {
    position: relative;
    top: 3rpx;
    box-shadow: 0px 0px 8px #999 inset;
}

.btn::after {
    border-radius: 30rpx;
    border: 0;
}

