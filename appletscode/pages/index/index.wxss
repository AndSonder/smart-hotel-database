/* 样式设计 */
page {
  height: 100%;
}

.total-framework {
  width: 100%;
  height: 100%;
  flex-direction: column;
  font-family: "KaiTi";
}
.total-group {
  display: flex;
  position: absolute;
  width: 90%;
  left: 5%;
  height: 1140rpx;
  flex-direction: column;
  background-color: #eeeeee;
  position: absolute;
  top: 200rpx;
  justify-content: space-around;
  font-family: "KaiTi";
  border-radius: 30rpx;
}

.total-img{
  width: 100%;
  height: 100%;
  filter: blur(200rpx);
  -webkit-filter: blur(20rpx);
}
.title-group {
  width: 100%;
  height: 100rpx;
  text-align: center;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background-color: white;
}

.title-group .text-title {
  padding-top: 30rpx;
  font-size: x-large;
}

.status-total{
  width: 100%;
  height: 220rpx;
  background-color: white;
}
.status-on-group {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.pho-group {
  width: 120rpx;
  height: 120rpx;
}

.pho-group .pho-logo {
  width: 100%;
  height: 100%;
}

.status-down-group {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 100rpx;
  padding-top: 20rpx;
}


.air-group {
  width: 100%;
  height: 400rpx;
  background-color: white;
}

.air-group .logo-group {
  width: 228rpx;
  height: 174rpx;
  margin-left: auto;
  margin-right: auto;
}

.air-group .AirStepper {
  width: 30%;
  height: 20rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20rpx;
}

.logo-group .logo {
  width: 100%;
  height: 100%;
}

.choAirStatus {
  display: flex;
  width: 100%;
  height: 130rpx;
  justify-content: space-around;
}

.AirStatus {
  width: 180rpx;
  height: 50rpx;
  margin-top: 25rpx;
  text-align: center;
}

.choCoolAir {
  width: 100%;
  background-color: rgba(0, 255, 255, 1);
  color: white;
  border-radius: 50rpx;
  text-align: center;
}

.choCoolAir-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 10rpx #bbbec4 inset;
}

.choCoolAir::after {
  border-radius: 50rpx;
  border: 0;
}

.choNatureAir {
  width: 100%;
  background-color: rgba(153, 215, 8, 1);
  color: white;
  border-radius: 50rpx;
  text-align: center;
}

.choNatureAir-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 10rpx #bbbec4 inset;
}

.choNatureAir::after {
  border-radius: 50rpx;
  border: 0;
}

.choWarmAir {
  width: 100%;
  background-color: rgba(255, 204, 0, 1);
  color: white;
  border-radius: 50rpx;
  text-align: center;
}

.choWarmAir-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 10rpx #bbbec4 inset;
}

.choWarmAir::after {
  border-radius: 50rpx;
  border: 0;
}

.choAirStatus_text {
  font-size: 0.8em;
}
.lamp-group {
  width: 100%;
  height: 260rpx;
  background-color: white;
}

.lamp-group .logo-group {
  width: 228rpx;
  height: 174rpx;
  margin-left: auto;
  margin-right: auto;
}

.lamp-group .slider-group{
  width: 90%;
  margin-left: 5%;
}

.logo-group .logo {
  width: 100%;
  height: 100%;
}

.Check-group{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 140rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background-color: white;
}

.CheckCheck{
  width: 360rpx;
  height: 50rpx;
  margin-top: 25rpx;
  text-align: center;
}

.Check-button {
  width: 100%;
  background-color: rgba(255, 8, 0, 0.952);
  color: white;
  border-radius: 50rpx;
  text-align: center;
}

.CheckButton-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 10rpx #bbbec4 inset;
}

.choCoolAir::after {
  border-radius: 50rpx;
  border: 0;
}

.Check-button .Check_text {
  font-size: large;
}
