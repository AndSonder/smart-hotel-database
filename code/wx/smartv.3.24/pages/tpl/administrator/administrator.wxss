/* pages/tpl/administrator/administrator.wxss */
.total-group{
  display: flex;
  flex-direction: row;
  width: 700rpx;
  height: 400rpx;
  border: 1px solid #e4e4e4;
  background: #FBFBFB;
  margin-top: 1em;
  margin-left: 25rpx;
 border-radius: 60rpx;
 box-shadow: 0rpx 10rpx 10rpx 5rpx rgba(26, 2, 2, 0.1);
 font-family: "KaiTi";
}
.color-group{
  display: flex;
  width:15%;
  height: 100%;
  flex-direction: column;
  border-radius: 60rpx 0rpx 0rpx 60rpx;
  overflow:hidden;
  /* background-color: rgb(19, 194, 194); */
  background: linear-gradient(to right, rgba(255,0,0,0), rgba(19, 194, 194,1));
}
.info-group{
  display: flex;
  width:80%;
  height: 100%;
  flex-direction: column;
  justify-content: space-evenly;
}
.info-group .regulation-group{
  margin-left: 70rpx;
}

.lock-group{
  display:flex;
  flex-direction: row;
}
.button::after {
  border: none;
}

.info-group .btn{
  background-color: rgb(19, 194, 194);
  border-radius: 30rpx;
  line-height: 70rpx;
  margin-top: 8rpx;
  width: 80%;
  color: white;
  text-align: center;
}
.btn-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 10rpx #bbbec4 inset;
}

.btn::after {
  border-radius: 30rpx;
  border: 0;
}